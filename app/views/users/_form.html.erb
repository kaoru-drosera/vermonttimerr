<%= form_with(model: @user, local:true) do |fm| %>
  <%= render 'shared/error_messages',object: object %>
<%# # renderで、「エラーメッセージを読み込むhtml.erbファイル」を読み込んでいる。
# あとで手動で作成したあと、編集するぞ。 %>

  <%= fm.label :name %>
  <%= fm.text_field :name, class:"form-control" %>

  <%= fm.label :email %>
  <%= fm.email_field :email, class:"form-control" %>

  <%= fm.label :password %>
  <%= fm.password_field :password, class:"form-control" %>

  <%= fm.label :password_confirmation,"Confirmation" %>
  <%= fm.password_field :password_confirmation, class:"form-control" %>

  <%= fm.submit yield(:button_text), class:"btn btn-primary" %>
<% end %>
