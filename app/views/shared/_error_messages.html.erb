<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert_denger">
      The form contains <%= pluralize(@user.errors.count,'error') %>
    </div><!--  .alert alert_denger -->
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div><!-- #error_explanation  -->
<% end %>
